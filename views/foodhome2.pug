                            p="name: "+food.foodname 
                            p="price: "+food.price   
                else 
                    if(food.location==selectedloc)
                        a(href="/food/"+food.id) 
                            div( border="1px" style="margin:20px;padding:10px;border-style:solid;border-color:black;height:300px;width:250px")
                                div(class="card" style="height:200px")
                                    img(src=food.foodpic[0] width="200px" height="200px")
                                    img(src=food.foodpic[1]  class="img-top" width="200px" height="200px")
